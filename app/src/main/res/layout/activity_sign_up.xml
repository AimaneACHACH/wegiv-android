<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="867dp"
        android:layout_height="1160dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_signup" />


    <ImageView
        android:id="@+id/app_logo_colored"
        android:layout_width="169dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_name" />

    <EditText
        android:id="@+id/first_name_et"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/input_style_2"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="First Name"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="#B76C6C6C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_pic" />

    <RadioGroup
        android:id="@+id/gender_rd"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/last_name_et"
        app:layout_constraintStart_toStartOf="@+id/last_name_et"
        app:layout_constraintTop_toBottomOf="@+id/last_name_et">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:buttonTint="#C270D7"
            android:text="Male"
            android:checked="true"
            android:fontFamily="@font/poppins_medium"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="138dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:buttonTint="#C270D7"
            android:text="Female"
            android:fontFamily="@font/poppins_medium"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="184dp" />

    </RadioGroup>

    <EditText
        android:id="@+id/last_name_et"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:background="@drawable/input_style_2"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="#B76C6C6C"
        android:hint="Last Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/first_name_et"
        app:layout_constraintStart_toStartOf="@+id/first_name_et"
        app:layout_constraintTop_toBottomOf="@+id/first_name_et" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:background="#C370D8"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/ic_profile_pic" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_pic"
        app:layout_constraintEnd_toEndOf="@+id/profile_pic"
        app:srcCompat="@drawable/ic_camera" />

    <EditText
        android:id="@+id/school_et"
        android:background="@drawable/input_style_2"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColorHint="#B76C6C6C"
        android:drawableStart="@drawable/ic_school"
        android:drawablePadding="6dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="School"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_rd" />

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/input_style_2"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="6dp"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColorHint="#B76C6C6C"
        app:layout_constraintBottom_toBottomOf="@+id/school_et"
        app:layout_constraintEnd_toEndOf="@+id/address_et"
        app:layout_constraintTop_toTopOf="@+id/school_et" />

    <EditText
        android:id="@+id/address_et"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_style_2"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="6dp"
        android:ems="100"
        android:fontFamily="@font/poppins_medium"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColorHint="#B76C6C6C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/school_et" />

    <EditText
        android:id="@+id/signup_email_et"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_style_2"
        android:drawableStart="@drawable/ic_email_grey"
        android:drawablePadding="6dp"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColorHint="#B76C6C6C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_et" />

    <EditText
        android:id="@+id/signup_password_et"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_style_2"
        android:drawableStart="@drawable/ic_password_grey"
        android:drawablePadding="6dp"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColorHint="#B76C6C6C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_email_et" />

    <Button
        android:id="@+id/create_account_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/poppins_medium"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_tv"
        app:rippleColor="#FFFFFF" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_style_2"
        android:fontFamily="@font/poppins_medium"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#F44336"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/create_account_btn"
        app:layout_constraintStart_toStartOf="@+id/create_account_btn"
        app:layout_constraintTop_toBottomOf="@+id/create_account_btn"
        app:rippleColor="#FFFFFF" />

    <TextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="* Make sure to fill all fields !"
        android:visibility="invisible"
        android:textColor="#F44336"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_password_et" />

    <ProgressBar
        android:id="@+id/signUp_progressBar"
        style="?android:attr/progressBarStyle"
        android:visibility="invisible"
        android:indeterminateTint="#9529B0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/create_account_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>